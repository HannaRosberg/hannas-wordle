<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Highscores</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    {{{navbar}}}
    <h1>Highscores</h1>
    <table id="highscore-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Score</th>
                <th>Time Elapsed</th>
                <th>Guesses</th>
                <th>Number of Letters</th>
                <th>Allow Repeat</th>
            </tr>
        </thead>
        <tbody>
            {{#each highscores}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.score}}</td>
                <td>{{this.timeElapsed}}</td>
                <td>{{this.guesses}}</td>
                <td>{{this.numLetters}}</td>
                <td>{{this.allowRepeat}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>

</html>
